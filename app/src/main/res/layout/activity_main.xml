<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".login_user.view.LoginUserM"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#6750A3"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Movie App"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="50sp"
            android:textColor="@color/black"/>
    </LinearLayout>
<!--Añadir intent para ir a cada pantalla-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#F4F2F2"
        android:layout_weight="3"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/btnIntentLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar sesión"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnIntentRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnIntentList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listar películas"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/bntIntentEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar películas" />
    </LinearLayout>

</LinearLayout>